<Window x:Class="GUI.View.Insert.InsertStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View.Insert"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Insert Student" Height="514" Width="600">
    <Grid Margin="0,32,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="479*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" Margin="0,-18,0,0" Grid.ColumnSpan="9" SelectionChanged="tabControl_SelectionChanged">
            <TabItem x:Name="tabItemInfo" Header="Info" Foreground="Blue">
                <Grid>
                    <Grid.Background>
                        <ImageBrush/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="168*"/>
                        <ColumnDefinition Width="297*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>


                    </Grid.RowDefinitions>

                    <!-- Labels and Text Boxes -->
                    <Label Grid.Row="0" Grid.Column="1" Margin="10,10,108,4" Content="Name*" Grid.ColumnSpan="5"/>
                    <TextBox Grid.Row="0" Grid.Column="6" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="61,8,59,0"/>

                    <Label Grid.Row="1" Grid.Column="1" Margin="10,10,108,4" Content="Surname*" Grid.ColumnSpan="5"/>
                    <TextBox Grid.Row="1" Grid.Column="6" Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="61,8,59,0"/>

                    <Label Grid.Row="2" Grid.Column="1" Margin="10,10,108,4" Content="Birthdate*" Grid.ColumnSpan="5"/>
                    <DatePicker Grid.Row="2" Grid.Column="6" Text="{Binding Birthdate, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="61,8,59,0"/>

                    <Label Grid.Row="3" Grid.Column="1" Margin="10,10,108,4" Content="Adress, city and county*" Grid.ColumnSpan="5"/>
                    <TextBox  x:Name ="textBoxAdress1" Grid.Row="3" Grid.Column="6" Text="{Binding AdressDto.Street, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="10,8,235,0"/>
                    <TextBox  x:Name ="textBoxAdress4" Grid.Row="3" Grid.Column="6" Text="{Binding AdressDto.StreetNm, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="77,8,177,0"/>
                    <TextBox  x:Name ="textBoxAdress3" Grid.Row="3" Grid.Column="6" Text="{Binding AdressDto.City, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="144,8,98,0"/>
                    <TextBox  x:Name ="textBoxAdress2" Grid.Row="3" Grid.Column="6" Text="{Binding AdressDto.Country, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="232,8,10,0"/>

                    <Label Grid.Row="4" Grid.Column="1" Margin="10,10,108,4" Content="Phonenumber*" Grid.ColumnSpan="5"/>
                    <TextBox Grid.Row="4" Grid.Column="6" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="61,8,59,0"/>

                    <Label Grid.Row="5" Grid.Column="1" Margin="10,10,108,4" Content="Email*" Grid.ColumnSpan="5"/>
                    <TextBox Grid.Row="5" Grid.Column="6" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="61,8,59,0"/>

                    <Label Grid.Row="6" Grid.Column="1" Margin="10,10,108,4" Content="Index*" Grid.ColumnSpan="5"/>
                    <TextBox  x:Name ="textBoxIndex1" Grid.Row="6" Grid.Column="6" Text="{Binding Path=IndexDto.Course, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Height="32" VerticalAlignment="Top" Margin="77,8,185,0"/>
                    <TextBox  x:Name ="textBoxIndex2" Grid.Row="6" Grid.Column="6" Text="{Binding Path=IndexDto.Number, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Height="32" VerticalAlignment="Top" Margin="144,8,129,0"/>
                    <TextBox  x:Name ="textBoxIndex3" Grid.Row="6" Grid.Column="6" Text="{Binding Path=IndexDto.Year, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Height="32" VerticalAlignment="Top" Margin="200,8,71,0"/>


                    <Label Grid.Row="7" Grid.Column="1" Margin="10,10,108,4" Content="Year of enrollment*" Grid.ColumnSpan="5"/>
                    <TextBox Grid.Row="7" Grid.Column="6" Text="{Binding StYear, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalAlignment="Top" Margin="61,8,59,0"/>

                    <Label Grid.Row="8" Grid.Column="1" Margin="10,10,108,4" Content="Current Year*" Grid.ColumnSpan="5"/>
                    <ComboBox x:Name="BoxYear" Grid.Row="8" Grid.Column="6" Height="32" VerticalAlignment="Top" Margin="61,8,59,0">
                        <ComboBoxItem x:Name="Item1">I</ComboBoxItem>
                        <ComboBoxItem x:Name="Item2">II</ComboBoxItem>
                        <ComboBoxItem x:Name="Item3">III</ComboBoxItem>
                        <ComboBoxItem x:Name="Item4">IV</ComboBoxItem>
                    </ComboBox>

                    <Label Grid.Row="9" Grid.Column="1" Margin="10,10,108,4" Content="Method of financing*" Grid.ColumnSpan="5"/>
                    <ComboBox x:Name="comboBoxStatus" Grid.Row="9" Grid.Column="6" Height="32" VerticalAlignment="Top" Margin="61,8,59,0">
                        <ComboBoxItem x:Name="StatusB">B</ComboBoxItem>
                        <ComboBoxItem x:Name="StatusS">S</ComboBoxItem>
                    </ComboBox>
                    <Button Grid.Row="10" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="5" RenderTransformOrigin="-5.177,2.01" Height="24" Width="63" Click="Button_Click">Save</Button>
                    <Button Grid.Row="10" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="99,0,0,0" Grid.Column="6" RenderTransformOrigin="-5.177,2.01" Height="24" Width="67" Click="Button_Exit" Content="Exit"></Button>

                </Grid>

            </TabItem>
            <TabItem x:Name="tabItemPassed" Header="Passed" Foreground="LimeGreen" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="-2,0,0,0" Width="52">
                <StackPanel Height="425" Orientation="Vertical">

                    <Button Content="Cancel grade" Click="Cancel_Click" Width="107" HorizontalAlignment="Left" Height="23"/>

                    <DataGrid x:Name="dataGridPassed" IsReadOnly="True" AutoGenerateColumns="False" Height="347">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="SUBJECT CODE" Width="*" Binding="{Binding IdSubject}" />
                            <DataGridTextColumn Header="SUBJECT NAME" Width="*" Binding="{Binding SubName}" />
                            <DataGridTextColumn Header="ESPB" Width="*" Binding="{Binding Espb}" />
                            <DataGridTextColumn Header="GRADE" Width="*" Binding="{Binding Grade}" />
                            <DataGridTextColumn Header="DATE" Width="*" Binding="{Binding Date}" />
                        </DataGrid.Columns>
                    </DataGrid>


                    <StackPanel Orientation="Horizontal">
                        <Label Content="Average Grade" Height="26" Width="88"/>
                        <TextBox x:Name="AverageBox" IsReadOnly="True" Height="19" Width="83" Margin="10,8,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Count Espb" Height="26" Width="88"/>
                        <TextBox x:Name="CountEspb" IsReadOnly="True" Height="17" Width="83" Margin="10,8,0,0"/>
                    </StackPanel>

                </StackPanel>
            </TabItem>


            <TabItem x:Name="tabItemFailed" Header="Failed"  Foreground="HotPink">
                <StackPanel Height="425" Orientation="Vertical">
                    <DockPanel LastChildFill="False">
                        <Button Content="Adding" Click="AddStudent_Click" Width="106" Background="Aqua" Height="23"/>
                        <Button Content="Remove" Click="RemoveStudent_Click" Width="106" Background="LightPink" Height="23"/>
                        <Button Content="Pass" Click="Pass_Click" Width="106" Background="Aqua" Height="23"/>
                    </DockPanel>
                    <DataGrid x:Name="dataGridFiled" IsReadOnly="True" AutoGenerateColumns="False" Height="404">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="SUBJECT CODE" Width="*" Binding="{Binding Code}" />
                            <DataGridTextColumn Header="SUBJECT NAME" Width="*" Binding="{Binding Name}" />
                            <DataGridTextColumn Header="ESPB" Width="*" Binding="{Binding Espb}" />
                            <DataGridTextColumn Header="SEMESTER" Width="*" Binding="{Binding Semester}" />
                            <DataGridTextColumn Header="YEAR OF STUDY" Width="*" Binding="{Binding Year}" />

                        </DataGrid.Columns>
                    </DataGrid>


                    <StackPanel Orientation="Horizontal">
                        <Label Content="Average Grade" Height="26" Width="88"/>
                        <TextBox Text="{Binding StYear, UpdateSourceTrigger=PropertyChanged}" Height="19" Width="83" Margin="10,8,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Count Espb" Height="26" Width="88"/>
                        <TextBox Text="{Binding SumEspb, UpdateSourceTrigger=PropertyChanged}" Height="17" Width="83" Margin="10,8,0,0"/>
                    </StackPanel>

                </StackPanel>

            </TabItem>
            <TabItem x:Name="tabItemProf" Header="Professors"  Foreground="Violet">
                <StackPanel Height="464" Orientation="Vertical">
                    <DataGrid x:Name="dataGridProf" IsReadOnly="True" AutoGenerateColumns="False" Height="404">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="NAME" Width="*" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="SURNAME" Width="*" Binding="{Binding Surname}"/>
                            <DataGridTextColumn Header="EMAIL" Width="*" Binding="{Binding Email}"/>
                            <DataGridTextColumn Header="TITLE" Width="*" Binding="{Binding Title}"/>
                        </DataGrid.Columns>
                    </DataGrid>


                </StackPanel>

            </TabItem>

        </TabControl>

    </Grid>
</Window>
