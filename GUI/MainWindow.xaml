<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Window.Resources>

        <ComponentResourceKey x:Key="NewIconKey" />
        <ComponentResourceKey x:Key="SaveIconKey" ResourceId="/Resources/save.png"/>
        <ComponentResourceKey x:Key="InfoIconKey" ResourceId="/Resources/info.png" />
        <ComponentResourceKey x:Key="EditIconKey" ResourceId="/Resources/edit.png"/>
        <ComponentResourceKey x:Key="CrossIconKey" ResourceId="/Resources/cross.png"/>
        <ComponentResourceKey x:Key="TrashIconKey" ResourceId="/Resources/trash.png"/>
        <ComponentResourceKey x:Key="OpenIconKey" ResourceId="/Resources/open.png"/>
    </Window.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Height="20">
            <StatusBar Height="20" Width="797">
                <TextBlock x:Name="statusTextBlock" DockPanel.Dock ="Left"  Text="Student services" Width="94"/>
                <TextBlock x:Name="TextBlockOpen" DockPanel.Dock ="Left"  Text="Open window..." Width="94"/>
                <DockPanel DockPanel.Dock="Right" Height="20" Width="1081">
                    <TextBlock x:Name="dateTimeTextBlock"  Width="122"/>
                </DockPanel>
            </StatusBar>
        </DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <Image Source="Resources/save.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save" InputGestureText="Ctrl+S" Icon="{DynamicResource SaveIconKey}"></MenuItem>
                <MenuItem Header="Open" InputGestureText="Ctrl+O" Icon="{DynamicResource OpenIconKey}">
                    <MenuItem Header="Students"></MenuItem>
                    <MenuItem Header="Subjects"></MenuItem>
                    <MenuItem Header="Professors"></MenuItem>
                    <MenuItem Header="Chairs"></MenuItem>
                </MenuItem>
                <MenuItem Header="Close" InputGestureText="Ctrl+C" Icon="{DynamicResource CrossIconKey}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Edit" InputGestureText="Ctrl+E" Icon="{DynamicResource EditIconKey}" ></MenuItem>
                <MenuItem Header="Delete" InputGestureText="Ctrl+D" Icon="{DynamicResource TrashIconKey}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"  Icon="{DynamicResource InfoIconKey}" InputGestureText="Ctrl+H"></MenuItem>
            </MenuItem>
            <Menu/>
           

        </Menu>

        <Grid Height="20" DockPanel.Dock="Top" >
            <DockPanel Grid.Column="0" LastChildFill="False" Margin="15,0,0, 0">
                <Button x:Name="buttonAdd" DockPanel.Dock="Left" Width="30" Click="Add_Click" >Add</Button>
                <Button x:Name="buttonEdit" DockPanel.Dock="Left" Width="30">Edit</Button>
                <Button x:Name="buttonDelete" DockPanel.Dock="Left" Width="40">Delete</Button>
            </DockPanel>
            <DockPanel Grid.Column="1" LastChildFill="False" Margin="0,0,15, 0">
                <Button x:Name="buttonSearch" DockPanel.Dock="Right" Width="40">Search</Button>
                <TextBox x:Name="textboxSearch" DockPanel.Dock="Right" Width="150"></TextBox>

            </DockPanel>
            
        </Grid>
        <Grid Width="736" Height="370">
            <TabControl x:Name="tabControl">
                <TabItem x:Name="tabItemStudent" Header="Student">
                    <DataGrid x:Name="dataGridStudent" IsReadOnly="True" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                             <DataGridTextColumn Header="INDEX" Width="*" Binding="{Binding IndexNm}"/>
                            
                            <DataGridTextColumn Header="NAME" Width="*" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="SURNAME" Width="*" Binding="{Binding Surname}"/>
                            <DataGridTextColumn Header="YEAR" Width="*" Binding="{Binding StYear}"/>
                            <DataGridTextColumn Header="STATUS" Width="*" Binding="{Binding StudentStatus}"/>
                            <DataGridTextColumn Header="AVERAGE" Width="*" Binding="{Binding Average}"/>



                        </DataGrid.Columns>
                    </DataGrid>

                </TabItem>
                <TabItem x:Name="tabItemProfessor" Header="Professor">
                    <DataGrid x:Name="dataGridProfessor" IsReadOnly="True" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="*" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="NAME" Width="*" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="SURNAME" Width="*" Binding="{Binding Surname}"/>
                            <DataGridTextColumn Header="BIRTHDATE" Width="*" Binding="{Binding Birthdate}"/>
                            <DataGridTextColumn Header="PHONENUMBER" Width="*" Binding="{Binding Phonenumber}"/>
                            <DataGridTextColumn Header="EMAIL" Width="*" Binding="{Binding Email}"/>
                            <DataGridTextColumn Header="TITLE" Width="*" Binding="{Binding Title}"/>
                            <DataGridTextColumn Header="YEAR" Width="*" Binding="{Binding Year}"/>
                            <DataGridTextColumn Header="ADDRESS" Width="*" Binding="{Binding AdressSt}"/>
                            
                            

                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem x:Name="tabItemSubject" Header="Subject">
                    
                    
                </TabItem>
            </TabControl>
